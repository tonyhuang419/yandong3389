<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 指定mysql 驱动包的路径 -->
	<classPathEntry location="C:\Users\Lawliet\.m2\repository\mysql\mysql-connector-java\5.1.18\mysql-connector-java-5.1.18.jar" />

	<context id="Mybatis3" targetRuntime="Mybatis3">

		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
		<!-- 生成dao层的共通类 -->
		<plugin type="org.mybatis.generator.plugins.IbatisCriteriaPlugin" />
		<!-- 生成service层 -->
		<plugin type="org.mybatis.generator.plugins.IbatisServicePlugin">
			<property name="targetPackage" value="com.dreams.dream.service" />
			<property name="implementationPackage" value="com.tony.jee.service.impl" />
			<property name="targetProject" value="../d_freamwork/src/main/java" />
			<property name="enableInsert" value="true" />
			<property name="enableUpdateByExampleSelective" value="true" />
			<property name="enableInsertSelective" value="true" />
			<property name="enableUpdateByPrimaryKey" value="true" />
			<property name="enableDeleteByPrimaryKey" value="true" />
			<property name="enableDeleteByExample" value="true" />
			<property name="enableUpdateByPrimaryKeySelective" value="true" />
			<property name="enableUpdateByExample" value="true" />
		</plugin>
		
		<!-- 数据库连接信息 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
		                       connectionURL="jdbc:mysql://localhost:3306/dream_db"
			                   userId="root"
			                   password="root" />

        <!-- java实体类 -->
		<javaModelGenerator targetPackage="com.tony.jee.pojo.base" targetProject="../d_freamwork/src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaModelGenerator>

        <!-- sqlMapper.xml -->
		<sqlMapGenerator targetPackage="sqlmap.base" targetProject="../d_freamwork/src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- DAO层接口 -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.d_freamworks.d_freamwork.dao.base" targetProject="../d_freamwork/src/main/java">
		</javaClientGenerator>


        <!-- 数据库表名列表 -->
		<table tableName="admin_info" ></table>
		<table tableName="article_comment_info" ></table>
		<table tableName="article_info" ></table>
		<table tableName="article_type_info" ></table>
		<table tableName="browsing_history" ></table>
		<table tableName="comment_reply_info" ></table>
		<table tableName="gift_info" ></table>
		<table tableName="login_log" ></table>
		<table tableName="operate_log" ></table>
		<table tableName="subscribe_info" ></table>
		<table tableName="support_info" ></table>
		<table tableName="system_config_info" ></table>
		<table tableName="user_info" ></table>
		<table tableName="user_comment_info" ></table>
	</context>
</generatorConfiguration>
