            <property name="enableDeleteByPrimaryKey" value="true" />
            <property name="enableDeleteByExample" value="true" />
            <property name="enableUpdateByPrimaryKeySelective" value="true" />
            <property name="enableUpdateByExample" value="true" />
        </plugin>
        
        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                               connectionURL="jdbc:mysql://localhost:3306/youxiyu_db"
                               userId="root"
                               password="root" />

        <!-- java实体类 -->
        <javaModelGenerator targetPackage="com.dreams.dream.pojo.base" targetProject="../dream/src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaModelGenerator>

        <!-- sqlMapper.xml -->
        <sqlMapGenerator targetPackage="sqlmap.base" targetProject="../dream/src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- DAO层接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dreams.dream.dao.base" targetProject="../dream/src/main/java">
        </javaClientGenerator>

